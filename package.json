{
  "name": "dual-publish",
  "version": "0.11.0",
  "description": "Publish project as dual ES modules and CommonJS package",
  "keywords": [
    "esm",
    "es modules",
    "dual package",
    "publish",
    "npm"
  ],
  "bin": "./bin.js",
  "engines": {
    "node": ">=10.0.0"
  },
  "scripts": {
    "test": "jest-ci --coverage && eslint-ci . && yaspeller-ci *.md"
  },
  "dependencies": {
    "clean-publish": "^1.1.8",
    "colorette": "^1.2.1",
    "globby": "^11.0.1",
    "line-column": "^1.0.2",
    "rimraf": "^3.0.2"
  },
  "author": "Andrey Sitnik <andrey@sitnik.ru>",
  "license": "MIT",
  "repository": "ai/dual-publish",
  "devDependencies": {
    "@babel/core": "^7.12.3",
    "@logux/eslint-config": "^41.0.2",
    "@rollup/plugin-node-resolve": "^9.0.0",
    "ci-job-number": "^1.2.2",
    "eslint": "^7.11.0",
    "eslint-ci": "^1.0.0",
    "eslint-config-standard": "^15.0.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jest": "^24.1.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prefer-let": "^1.1.0",
    "eslint-plugin-prettierx": "^0.14.0",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-security": "^1.4.0",
    "eslint-plugin-standard": "^4.0.2",
    "eslint-plugin-unicorn": "^23.0.0",
    "fs-extra": "^9.0.1",
    "husky": "^4.3.0",
    "jest": "^26.6.0",
    "jest-ci": "^0.1.1",
    "lint-staged": "^10.4.2",
    "metro": "^0.59.0",
    "metro-react-native-babel-transformer": "^0.59.0",
    "nanoid": "^3.1.14",
    "parcel": "^1.12.4",
    "rollup": "^2.32.1",
    "rollup-plugin-svg": "^2.0.0",
    "ts-node": "^9.0.0",
    "typescript": "^4.0.3",
    "webpack": "^4.43.0",
    "yaspeller": "^7.0.0",
    "yaspeller-ci": "^1.0.2"
  },
  "eslintConfig": {
    "extends": "@logux/eslint-config",
    "rules": {
      "security/detect-unsafe-regex": "off",
      "jest/no-conditional-expect": "off",
      "node/global-require": "off"
    }
  },
  "eslintIgnore": [
    "test/fixtures/"
  ],
  "jest": {
    "testEnvironment": "node",
    "modulePathIgnorePatterns": [
      "test/fixtures/"
    ],
    "coverageThreshold": {
      "global": {
        "statements": 100
      }
    }
  },
  "lint-staged": {
    "*.md": "yaspeller",
    "*.js": "eslint"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "yaspeller": {
    "lang": "en",
    "ignoreCapitalization": true,
    "ignoreText": [
      " \\(by [^)]+\\)."
    ],
    "dictionary": [
      "Versioning",
      "JS",
      "ES",
      "CommonJS",
      "js",
      "bundlers",
      "webpack",
      "GitHub",
      "configs",
      "npm",
      "dirs",
      "ESM",
      "dir",
      "NanoEvents",
      "as ESM or",
      "subfolders",
      "16M"
    ]
  }
}
