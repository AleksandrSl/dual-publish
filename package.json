{
  "name": "dual-publish",
  "version": "0.5.0",
  "description": "Publish project as dual ES modules and CommonJS package",
  "keywords": [
    "esm",
    "es modules",
    "dual package",
    "publish",
    "npm"
  ],
  "bin": "./bin.js",
  "engines": {
    "node": ">=10.0.0"
  },
  "scripts": {
    "test": "jest-ci --coverage && eslint-ci . && yaspeller-ci *.md"
  },
  "dependencies": {
    "chalk": "^3.0.0",
    "clean-publish": "^1.1.6",
    "globby": "^11.0.0",
    "line-column": "^1.0.2",
    "rimraf": "^3.0.2"
  },
  "author": "Andrey Sitnik <andrey@sitnik.ru>",
  "license": "MIT",
  "repository": "ai/dual-publish",
  "devDependencies": {
    "@logux/eslint-config": "^36.0.0",
    "eslint": "^6.8.0",
    "eslint-ci": "^1.0.0",
    "eslint-config-standard": "^14.1.0",
    "eslint-plugin-import": "^2.20.1",
    "eslint-plugin-jest": "^23.8.2",
    "eslint-plugin-node": "^11.0.0",
    "eslint-plugin-prefer-let": "^1.0.1",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-security": "^1.4.0",
    "eslint-plugin-standard": "^4.0.1",
    "eslint-plugin-unicorn": "^16.1.1",
    "fs-extra": "^8.1.0",
    "husky": "^4.2.3",
    "jest": "^25.1.0",
    "jest-ci": "^0.1.1",
    "lint-staged": "^10.0.8",
    "nanoid": "^2.1.11",
    "webpack": "^4.42.0",
    "yaspeller": "^6.0.3",
    "yaspeller-ci": "^1.0.2"
  },
  "eslintConfig": {
    "extends": "@logux/eslint-config",
    "rules": {
      "security/detect-unsafe-regex": "off",
      "global-require": "off"
    }
  },
  "eslintIgnore": [
    "test/fixtures/"
  ],
  "jest": {
    "testEnvironment": "node",
    "coverageThreshold": {
      "global": {
        "statements": 100
      }
    }
  },
  "lint-staged": {
    "*.md": "yaspeller",
    "*.js": "eslint"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "yaspeller": {
    "lang": "en",
    "ignoreCapitalization": true,
    "ignoreText": [
      " \\(by [^)]+\\)."
    ],
    "dictionary": [
      "Versioning",
      "JS",
      "ES",
      "CommonJS",
      "js",
      "bundlers",
      "webpack",
      "GitHub",
      "configs",
      "npm",
      "dirs",
      "ESM",
      "dir",
      "NanoEvents",
      "as ESM or"
    ]
  }
}
